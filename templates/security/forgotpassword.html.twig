{% extends 'base.html.twig' %}

{% block body %}

    <img style="right: 0; padding-bottom: 170px; position: fixed;" src="{{ asset('assets/images/logo_blanc.svg') }}" alt="logo" width="250" height="250">

    <div class="container mb-5">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-5">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}

        {% if errors %}
            <div class="alert alert-danger alert-dismissible fade show mt-5" role="alert">
                <p class="text-danger">Vous n'avez pas rempli le formulaire correctement : </p>
                <ul>
                    {% for error in errors %}
                        <li style="list-style-type: disc;">{{ error }}</li>
                    {% endfor %}
                </ul>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endif %}

        <div id="forgotpassword" class="card">
            <center>
                </br>
                <img src="{{ asset('assets/images/logo_couleur.svg') }}" alt="logo" width="300" height="75">
            </center>
            <div class="card-body mt-4">
                <center>
                    <b>Vous avez oubli√© votre de mot de passe ?</b></br></br>
                    <form action="{{ path('forgot-password') }}" method="POST">
                        <div class="form-group">
                            <input type="text" name="email" class="form-control" placeholder="Saissisez votre adresse email" required>
                        </div></br>
                        <center>
                            <button id="boutons" style="background-color: #9D1458;" type="submit" class="btn btn-light"><span style="color: white;">Confirmer</span></button>
                        </center>
                    </form>
                </center>
            </div>
        </div>
    </div>

    <div id="fin">
        <p>Powered by Pepperbay</p>
    </div>


{% endblock %}