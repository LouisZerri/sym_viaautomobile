{% extends 'base.html.twig' %}

{% block body %}

    {% include 'layout/menu.html.twig' %}
    {% include 'layout/navbar.html.twig' %}

    <div class="container mt-5">
        <h3 class="text-viaautomobile mb-5"><b>PARAMÈTRES DU COMPTE</b></h3>
        {{ form_start(form) }}
            <div class="card edit-card">
                <h4>Informations générales</h4><hr/>
                <div class="card-body edit-card-body mt-4">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputEmail4">Nom</label>
                            {{ form_row(form.nom, {'attr': {'placeholder': 'Nom'}}) }}
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputPassword4">Prénom</label>
                            {{ form_row(form.prenom, {'attr': {'placeholder': 'Prénom'}}) }}
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputAddress">Date de naissance</label>
                            {{ form_row(form.date_naissance, {'attr': {'placeholder': 'Date de naissance (JJ/MM/AAAA)'}}) }}
                        </div>
                        <div class="form-group col-4">
                            <label for="inputAddress2">Portable</label>
                            {{ form_row(form.portable, {'attr': {'placeholder': 'Téléphone portable (+33)'}}) }}
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputCity">Enseigne</label>
                            {{ form_row(form.enseigne, {'attr': {'placeholder': 'Enseigne'}}) }}
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">Site de rattachement</label>
                            {{ form_row(form.site_rattachement, {'attr': {'placeholder': 'Site de rattachement'}}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputZip">Adresse mail</label>
                            {{ form_row(form.email, {'attr': {'placeholder': 'Adresse email'}}) }}
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputZip">Mot de passe</label>
                            {{ form_row(form.password, {'attr': {'placeholder': 'Choissisez un mot de passe'}}) }}
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputZip">Confirmation du mot de passe</label>
                            {{ form_row(form.confirm_password, {'attr': {'placeholder': 'Confirmez votre mot de passe'}}) }}
                        </div>
                    </div>
                    <button type="submit" class="btn btn-light dashboard-button mb-2">Modifier</button>
                </div>
            </div>
        {{ form_end(form) }}
    </div>

{% endblock %}