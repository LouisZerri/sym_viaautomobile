{% extends 'base.html.twig' %}

{% block body %}

    {% include 'admin/layout/navbar.html.twig' %}

    {% block stylesheets %}
        <style>
            html, body
            {
                background: url('{{ vich_uploader_asset(challenge, 'imageFile') }}') no-repeat center fixed;
                -webkit-background-size: cover; /* pour anciens Chrome et Safari */
                background-size: cover; /* version standardisée */
            }

        </style>

    {% endblock %}

    <div class="container mt-4">
        <h3 class="text-viaautomobile edit-title mt-5 mb-5"><b>ÉDITER LE CHALLENGE</b></h3>
        {{ form_start(form) }}
            <div class="card edit-card">
            <h4 class="text-viaautomobile">Informations générales</h4><hr/>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col-md-8">{{ form_row(form.titre) }}</div>
                            <div class="col-md-4">{{ form_row(form.periode) }}</div>
                            <div class="col-md-8">{{ form_row(form.description) }}</div>
                            <div class="col-md-4">{{ form_row(form.imageFile) }}</div>
                            <div class="col-md-8">{{ form_row(form.imageFileAccueil) }}</div>
                            <div class="col-md-4">{{ form_row(form.vainqueur) }}</div>
                        </div>
                    </div>
                </div>
                {{ form_row(form.en_cours) }}
                <button type="submit" class="btn btn-light light-button mb-2">Éditer</button>
            {{ form_end(form) }}
            </div>
    </div>


{% endblock %}